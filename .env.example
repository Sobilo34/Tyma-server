# Django Configuration
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.pixl.space
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com

# Database Configuration
# This will be automatically provided by Pixl Space
# DATABASE_URL=postgresql://user:password@host:port/database

# Pixl Space Environment Variables
# These will be automatically set by Pixl Space
# PIXL_SPACE=True
# PIXL_HOSTNAME=your-app-name.pixl.space
# PORT=8000

# Django Admin Superuser (optional)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=secure-password-here

# Static and Media Files
STATIC_URL=/static/
STATIC_ROOT=staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=media

# Additional Custom Domains (optional)
# CUSTOM_DOMAINS=example.com,www.example.com

# CORS Additional Origins (optional)
# CORS_ALLOWED_ORIGINS=https://example.com,https://www.example.com

# Security Settings (automatically enabled in production)
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
